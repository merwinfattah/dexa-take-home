<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container" >
    <% if (locals.errorMessage) { %>
        <div class="alert alert-danger" role="alert">
            <%= locals.errorMessage %>
        </div>
    <% } %>
    
    <% if (locals.successMessage) { %>
        <div class="alert alert-success" role="alert">
            <%= locals.successMessage %>
        </div>
    <% } %>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <!-- Include the modal component -->
        <%- include('../partials/add'); %>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
                <% if (data.length) { %>
                    <% data.forEach((task) => { %>
                        <tr>
                            <th scope="row"><%= task.id %></th>
                            <td><%= task.title %></td>
                            <td><a><%= task.description %></a></td>
                            <td><%= task.status %></td>
                            <td>
                                <!-- Update button -->
                                <a class="btn btn-sm btn-primary" href="/edit/<%=task.id%>">Edit</a>
                                <!-- Delete Task button -->
                                <a onclick="return alert('Are You sure?')" href="/delete/<%=task.id%>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                      <td colspan="5">No data available</td>
                    </tr>
                <% } %>
            </tbody>
          </table>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>